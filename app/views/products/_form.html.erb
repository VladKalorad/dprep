<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label "Название", style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label "Описание", style: "display: block" %>
    <%= form.text_field :composition, class: 'form-control'%>
  </div>

  <div class="form-group mb-3">
    <%= form.label "Цена", style: "display: block" %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label "Производитель", style: "display: block" %>
    <%= form.text_field :manufacturer, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label "Подкатегория", style: "display: block" %>
    <%= form.collection_select :type_id, Type.order(:name), :id, :name, { prompt: 'Выберите тип товара' }, { class: 'form-control' } %>
  </div>

  <div class="actions mt-3 mb-3">
    <%= form.submit 'Готово', class: 'btn btn-success' %>
    <%= link_to 'Все продукты', products_path, class: 'btn btn-outline-dark' %>
  </div>
<% end %>
