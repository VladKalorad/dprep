<div class="container mt-1 px-1">
<h1>Товары:  <%= link_to 'Добавить товар', new_product_path, class: 'btn btn-outline-dark' %></h1>

<div id="products">
  <% @products.each do |product| %>
  <div class="row row-cols-1 row-cols-md-4 g-4">
  <div class="col">
    <div class="card" style="border-radius: 15px;">
      <% if product.image.attached?%>
    <%= image_tag(product.image, style:"width: 400px; height: 400px; border-radius: 20px;", class: "img-fluid") %>
    <% end%>
      <div class="card-body">
        <div class="d-flex justify-content-center">
        <p><%= link_to product.name, product, class: "text-dark" %></p>
        </div>
         <hr class="my-0" />
          <div class="card-body pb-0">
            <div class="d-flex justify-content-left">
              <p><strong>Производитель: </strong> <%=  product.manufacturer %></p>
            </div>
          </div>
          <hr class="my-0" />
          <div class="card-body pb-0">
            <div class="d-flex justify-content-left">
              <p><strong>Цена: </strong><%= product.price %> <strong>BYN</strong></p>
            </div>
          </div>
          <hr class="my-0" />
          <div class="card-body">
            <div class="d-flex justify-content-center align-items-center pb-0 mb-1">
              <button type="button" class="btn btn-primary">В корзину</button>
            </div>
          </div>
      </div>
    </div>
  </div
  
  <% end %>
 