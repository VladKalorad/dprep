<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
  <% if product.image.attached?%>
    <%= image_tag(product.image, style:"width: 200px;") %>
    <% end%>
  </p>

 <p>
    <strong>Composition:</strong>
    <%= product.composition %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Manufacturer:</strong>
    <%= product.manufacturer %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= product.type_id %>
  </p>

</div>
