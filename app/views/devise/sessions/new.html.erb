<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
<section class="vh-10" style="background-color: #f0ebeb;">
  <div class="container py-5 h-10">
    <div class="row d-flex justify-content-center align-items-center h-10">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://avatars.mds.yandex.net/get-altay/4632172/2a00000179d8fcb9c0f938d52cce4510028d/XXL_height"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form>

                  <div class="d-flex align-items-center mb-3 pb-1">
                  <img src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcQihwDy7EX1LgLbQfn-9oxwPcmFejxkGTVnhE4hsyuRUHLE0mPd" style="width: 120px;" alt="logo">
                    <span class="h1 fw-bold mb-0" style="padding: 7%">Новый континент</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Войти в аккаунт: </h5>

                  <div class="form-outline mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg"%>
                    <%= f.label :email, class: "form-label" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
                    <%= f.label :password, class:"form-label"%><br />
                  </div>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Войти", class: "btn btn-dark btn-lg btn-block form-control form-control-lg"%>
                  </div>
                  
                  <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me, class: "form-check-input" %>
                        <%= f.label "Запомнить меня", class: "form-check-label" %>
                      </div>
                    <% end %>
                  <% end %>

                <%= render "devise/shared/links" %>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

